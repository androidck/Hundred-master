<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/view_title"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_80_yellow"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/space_250"
            android:layout_height="@dimen/space_276"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_100"
            android:src="@mipmap/icon_activation" />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/space_20"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_url"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_80"
                android:text="官网地址：https://18b.tv"
                android:textColor="@color/colorDeep"
                android:gravity="center"
                />
            <include layout="@layout/division_line"/>
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_80"
                android:text="联系邮箱：service@nnfe.com"
                android:textColor="@color/colorDeep"
                android:gravity="center"
                />
            <include layout="@layout/division_line"/>
            <TextView
                android:id="@+id/tv_version_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_80"
                android:text="版本：v3.1.3"
                android:textColor="@color/colorDeep"
                android:gravity="center"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>