<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <org.salient.artplayer.VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_450" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_24"
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginRight="@dimen/space_24"
        android:textSize="@dimen/font_size_38px"
        android:layout_below="@id/video_view"
        android:textColor="@color/textColor" />
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ly_jieben"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_60"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/space_24"
        android:layout_marginRight="@dimen/space_24"
        android:layout_below="@id/tv_title"
        >
        <TextView
            android:id="@+id/tv_play_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center_vertical"
            android:textColor="@color/colorDeep"
            android:textSize="@dimen/font_size_26px"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center_vertical"
            android:textColor="@color/colorDeep"
            android:textSize="@dimen/font_size_26px"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_not_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_26px"
                android:gravity="center_vertical|right"
                android:textColor="@color/colorDeep"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/space_16"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:drawablePadding="@dimen/space_16"
                android:text="1"
                android:layout_centerInParent="true"
                android:textColor="@color/colorDeep"
                android:textSize="@dimen/font_size_26px"
                />
        </RelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.hjq.bar.TitleBar
        android:layout_width="@dimen/space_100"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:lineColor="@color/transparent" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ly_jieben"
        android:layout_above="@id/ly_collection"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/space_80"
                    android:layout_marginLeft="@dimen/space_24"
                    android:layout_marginRight="@dimen/space_24"
                    android:textColor="@color/textColor"
                    android:text="简介"
                    android:textSize="@dimen/font_size_34px"
                    android:drawableRight="@mipmap/icon_jianjie"
                    android:drawablePadding="@dimen/space_16"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_24"
                    android:layout_marginRight="@dimen/space_24"
                    android:ellipsize="end"
                    android:maxLines="5"
                    android:textColor="@color/colorDeep"
                    android:textSize="@dimen/font_size_30px" />
                <include layout="@layout/divisions_line"/>
                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_220"
                    android:layout_marginTop="@dimen/space_20"
                    />
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_90"
                    android:orientation="horizontal"
                    >
                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/space_24"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/font_size_30px"
                            android:textColor="@color/textColor"
                            android:text="猜你喜欢"
                            android:drawableRight="@mipmap/icon_yellow_xin"
                            android:drawablePadding="@dimen/space_16"
                            android:gravity="center_vertical"
                            />
                    </com.zhy.autolayout.AutoLinearLayout>
                    <TextView
                        android:id="@+id/tv_huan"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_size_30px"
                        android:textColor="@color/colorAccent"
                        android:text="换一批"
                        android:layout_marginRight="@dimen/space_24"
                        android:gravity="center_vertical|right"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
                <include layout="@layout/division_line"/>
                <com.yanzhenjie.recyclerview.SwipeRecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </ScrollView>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/ly_collection"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_100"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:layout_width="@dimen/space_100"
            android:layout_height="@dimen/space_100"
            android:src="@mipmap/icon_collect"
            android:padding="@dimen/space_20"
            android:layout_centerInParent="true"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>