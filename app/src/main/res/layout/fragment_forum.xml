<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >
    <ImageView
        android:id="@+id/forum_current"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_500"
        android:scaleType="centerCrop"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/forum_target"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_500"
        android:scaleType="centerCrop"
        tools:ignore="MissingConstraints" />
    <View
        android:id="@+id/forum_top_bar_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alpha="0"
        android:background="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/forum_top_bar_title_layout"
        app:layout_constraintTop_toTopOf="@+id/forum_top_bar_title_layout" />

    <View
        android:id="@+id/forum_arc_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_500"
        android:alpha="0"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/forum_current" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/forum_top_bar_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_500"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.hjq.bar.TitleBar
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    app:backButton="false"
                    android:background="#00ffffff"
                    app:title=""
                    app:lineColor="#00ffffff"
                    >
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_80"
                        app:tabTextColor="@android:color/white"
                        android:layout_gravity="center_vertical"
                        app:tabSelectedTextColor="@android:color/white"
                        app:tabIndicatorFullWidth="false"
                        app:tabMode="scrollable"
                        app:tabIndicatorColor="@android:color/white"
                        />
                </com.hjq.bar.TitleBar>
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_12"
                >
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_56"
                        android:layout_marginLeft="@dimen/space_24"
                        android:background="@drawable/shape_search_gray_bg"
                        android:paddingLeft="@dimen/space_24"
                        android:paddingRight="@dimen/space_24"
                        android:hint="搜点什么"
                        android:drawableLeft="@mipmap/icon_search"
                        android:drawablePadding="@dimen/space_16"
                        android:textSize="@dimen/font_size_24px"
                        android:gravity="center_vertical"
                        />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:id="@+id/img_surface"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/icon_surface_white"
                        android:scaleType="centerInside"
                        />
                    <ImageView
                        android:id="@+id/img_add"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/icon_add_white"
                        android:scaleType="centerInside"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/space_270" />

</androidx.constraintlayout.widget.ConstraintLayout>