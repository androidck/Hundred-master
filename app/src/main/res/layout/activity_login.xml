<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/space_250"
            android:layout_height="@dimen/space_276"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_70"
            android:src="@mipmap/icon_activation" />

        <com.hjq.widget.view.ClearEditText
            android:id="@+id/et_login_phone"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_90"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:hint="输入账号或手机号"
            android:drawableLeft="@mipmap/icon_login_account"
            android:drawablePadding="@dimen/space_16"
            android:inputType="number"
            android:maxLength="13"
            android:singleLine="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/colorLines"
            android:orientation="vertical" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_90"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.hjq.widget.view.ClearEditText
                android:id="@+id/ed_pwd"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:hint="输入密码"
                android:drawableLeft="@mipmap/icon_login_pwd"
                android:drawablePadding="@dimen/space_16"
                android:inputType="textPassword"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/is_show_pwd"
                android:layout_width="@dimen/space_72"
                android:layout_height="@dimen/space_72"
                android:layout_gravity="center"
                android:layout_marginRight="40dp"
                android:src="@mipmap/icon_hide_pwd" />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/colorLines"
            android:orientation="vertical" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="@dimen/space_60"
            android:layout_marginRight="40dp"
            android:background="@drawable/shape_setup_button"
            android:gravity="center"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="@dimen/space_34" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_90"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="@dimen/space_120"
            android:layout_marginRight="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="注册账号"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/font_size_30px" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="@dimen/space_20"
                android:background="@color/colorLines"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/for_got_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="忘记密码?"
                android:textColor="@color/colorDeep"
                android:textSize="@dimen/font_size_30px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_agreement"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_120"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textColor="@color/colorDeep"
                android:textSize="@dimen/font_size_30px" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>