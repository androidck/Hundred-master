<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        app:leftIcon="@mipmap/bar_icon_back_white"
        app:leftColor="@android:color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/space_80"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                />
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_60"
                android:background="@drawable/shape_search_white_bg"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/space_24"
                android:drawableLeft="@mipmap/icon_search"
                android:paddingLeft="@dimen/space_24"
                android:drawablePadding="@dimen/space_16"
                android:layout_marginLeft="@dimen/space_24"
                android:gravity="center_vertical"
                android:hint="搜你想搜 看你想看"
                android:textSize="@dimen/font_size_26px"
                />
        </LinearLayout>

    </com.hjq.bar.TitleBar>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        >
        <com.hjq.widget.layout.HintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_100"
                    android:orientation="horizontal"
                    >
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        app:tabIndicatorFullWidth="false"
                        app:tabMode="scrollable"
                        />
                    <View
                        android:layout_width="@dimen/space_2"
                        android:layout_height="match_parent"
                        android:background="#f0f0f0"
                        />
                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/ly_screen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        >

                        <com.samluys.filtertab.FilterTabView
                            android:id="@+id/ftb_filter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:column_num="1"
                            />
                    </com.zhy.autolayout.AutoRelativeLayout>

                </com.zhy.autolayout.AutoLinearLayout>
                <include layout="@layout/division_line"/>
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.hjq.widget.layout.HintLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>