<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/view_title"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_80_yellow"
        >

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tv_exchange"
            android:layout_marginBottom="0dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/space_250"
                android:layout_height="@dimen/space_276"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_100"
                android:src="@mipmap/icon_activation" />
            <com.hjq.widget.view.ClearEditText
                android:id="@+id/ed_jhm"
                android:layout_width="@dimen/space_700"
                android:layout_height="@dimen/space_100"
                android:hint="请输入你的激活码"
                android:layout_gravity="center"
                android:gravity="center"
                android:inputType="textVisiblePassword"
                android:background="@drawable/shape_security_code_bg"
                android:layout_marginTop="@dimen/space_80"
                android:textSize="@dimen/font_size_34px"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="（使用激活码可以兑换相应期限的会员特权）"
                android:textColor="@color/colorDeep"
                android:textSize="@dimen/font_size_30px"
                android:gravity="center"
                android:layout_marginTop="@dimen/space_70"
                />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/tv_exchange"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_100"
            android:background="@color/colorAccent"
            android:textSize="@dimen/font_size_34px"
            android:textColor="@android:color/white"
            android:text="立 即 兑 换"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>