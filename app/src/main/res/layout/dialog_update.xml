<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="@dimen/space_500"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/upload_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_280"
            android:src="@mipmap/upload_bg"
            android:scaleType="fitXY"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/upload_bg"
            android:background="@drawable/shape_white_bg"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/upload_tip"
                android:layout_marginTop="@dimen/space_30"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_update_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_40"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginEnd="@dimen/space_40"
                android:layout_marginBottom="@dimen/space_20"
                android:lineSpacingExtra="@dimen/space_12"
                android:minLines="3"
                android:textColor="@color/black60"
                android:textSize="15sp"
                tools:text="6666" />
            <ProgressBar
                android:id="@+id/pb_update_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="5dp"
                android:indeterminate="false"
                android:visibility="gone"
                />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_80"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                >
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/ly_esc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/tv_update_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="残忍拒绝"
                        android:textColor="@android:color/white"
                        android:paddingLeft="@dimen/space_40"
                        android:paddingRight="@dimen/space_40"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="@dimen/space_6"
                        android:paddingBottom="@dimen/space_6"
                        android:background="@drawable/shape_refuse_text_bg"
                        />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/tv_update_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="立即升级"
                        android:textColor="@android:color/white"
                        android:paddingLeft="@dimen/space_40"
                        android:paddingRight="@dimen/space_40"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="@dimen/space_6"
                        android:paddingBottom="@dimen/space_6"
                        android:background="@drawable/shape_update_text_bg"
                        />
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>
</RelativeLayout>