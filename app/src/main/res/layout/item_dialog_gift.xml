<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/item_gift_ly"
        android:layout_width="@dimen/space_150"
        android:layout_height="@dimen/space_180"
        android:orientation="vertical"
        android:background="@drawable/shape_gift_select"
        android:layout_margin="@dimen/space_10"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="@dimen/space_80"
            android:layout_height="@dimen/space_90"
            android:src="@mipmap/gitf_banana"
            android:layout_marginTop="@dimen/space_10"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="香蕉"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_20px"
            android:layout_marginTop="@dimen/space_4"
            />
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="￥0.1"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="@dimen/font_size_24px"
            android:layout_marginTop="@dimen/space_4"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>