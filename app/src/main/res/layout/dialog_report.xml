<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="@dimen/space_620"
        android:layout_height="@dimen/space_360"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_dialog_white_bg"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="选择举报原因"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_30px"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="@dimen/space_10"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/space_12"
                android:layout_marginRight="@dimen/space_12"
                android:layout_height="match_parent"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_esc"
                android:layout_width="@dimen/space_250"
                android:layout_height="@dimen/space_70"
                android:text="取 消"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_30px"
                android:layout_marginLeft="@dimen/space_40"
                android:gravity="center"
                android:background="@drawable/shape_setup_button"
                android:layout_gravity="center_vertical|right"
                />
            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="@dimen/space_250"
                android:layout_height="@dimen/space_70"
                android:layout_marginLeft="@dimen/space_30"
                android:layout_gravity="center_vertical|right"
                android:text="举 报"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_30px"
                android:gravity="center"
                android:background="@drawable/shape_setup_button"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>