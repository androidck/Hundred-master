<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/space_10"
    android:paddingRight="@dimen/space_10"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="@dimen/space_350"
        android:layout_height="@dimen/space_280"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >
        <com.community.hundred.common.view.RoundAngleImageView
            android:id="@+id/tv_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_210"
            android:scaleType="fitXY"
            android:src="@mipmap/item_live"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_70"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/font_size_26px"
            android:gravity="center"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>