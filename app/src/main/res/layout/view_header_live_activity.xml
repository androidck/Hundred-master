<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_220"
        android:background="@color/textColor"
        android:orientation="horizontal"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgUrl"
                android:layout_width="@dimen/space_130"
                android:layout_height="@dimen/space_130"
                android:src="@mipmap/ic_launcher"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="红高粱直播平台"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="@dimen/space_30"
                android:layout_marginLeft="@dimen/space_40"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_2"
                android:background="@android:color/white"
                android:layout_marginLeft="@dimen/space_24"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="图片所有直播以及内\n容全部是第三方获取"
                android:layout_marginLeft="@dimen/space_40"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="@dimen/font_size_24px"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>