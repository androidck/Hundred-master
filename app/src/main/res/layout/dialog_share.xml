<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/tv_tip_content"
        android:layout_width="@dimen/space_530"
        android:layout_height="@dimen/space_260"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_white_bg"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_tip"
            android:layout_marginTop="@dimen/space_20"
            />
        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="今日免费观看次数已用光，请分享"
            android:gravity="center"
            android:textSize="@dimen/font_size_26px"
            android:textColor="@color/colorDeep"
            android:layout_marginTop="@dimen/space_30"
            />
        <Button
            android:id="@+id/btn_pay"
            android:layout_width="@dimen/space_240"
            android:layout_height="@dimen/space_60"
            android:text="去分享"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_go_pay"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_40"
            />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:id="@+id/view_xian"
        android:layout_width="@dimen/space_4"
        android:layout_height="@dimen/space_150"
        android:layout_below="@id/tv_tip_content"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white" />
    <ImageView
        android:id="@+id/img_close"
        android:layout_width="@dimen/space_60"
        android:layout_height="@dimen/space_60"
        android:src="@mipmap/icon_balance_close"
        android:layout_below="@id/view_xian"
        android:layout_marginTop="-8dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/space_20"
        />
</com.zhy.autolayout.AutoRelativeLayout>