<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_140"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/space_24"
        android:layout_marginRight="@dimen/space_24"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_head"
                android:layout_width="@dimen/space_130"
                android:layout_height="@dimen/space_130"
                android:src="@mipmap/icon_live"
                android:padding="@dimen/space_10"
                android:layout_centerVertical="true"
                app:civ_border_color="@color/colorAccent"
                app:border_width="@dimen/space_2"
                />
            <TextView
                android:id="@+id/tv_message_unread_message"
                android:layout_width="@dimen/space_36"
                android:layout_height="@dimen/space_36"
                android:text="15"
                android:gravity="center"
                android:textSize="@dimen/space_18"
                android:background="@drawable/shape_unread_message"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:layout_marginRight="@dimen/space_16"
                android:layout_marginTop="@dimen/space_10"

                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_marginTop="@dimen/space_6"
            android:layout_marginBottom="@dimen/space_6"
            android:orientation="vertical"
            >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_nick_name"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="轮回的悲伤"
                    android:textSize="@dimen/font_size_30px"
                    android:textColor="@color/textColor"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/space_20"
                    />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="3分钟前"
                    android:textSize="@dimen/font_size_28px"
                    android:textColor="@color/colorDeep"
                    android:gravity="center_vertical|right"
                    android:layout_marginTop="@dimen/space_20"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="在吗？上次和我说的哪款软件叫啥名字"
                android:textColor="@color/colorDeep"
                android:textSize="@dimen/font_size_26px"
                android:layout_marginTop="@dimen/space_10"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>