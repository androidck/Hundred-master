<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_120"
        android:layout_marginLeft="@dimen/space_24"
        android:layout_marginRight="@dimen/space_24"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <com.community.hundred.common.view.StrokeTextView
                android:id="@+id/gift_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="12"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_head"
                android:layout_width="@dimen/space_120"
                android:layout_height="@dimen/space_120"
                android:layout_centerInParent="true"
                android:padding="@dimen/space_10"
                android:src="@mipmap/icon_live"
                app:border_width="@dimen/space_4"
                app:civ_border_color="@color/colorAccent" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/space_10"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:text="什么昵称好"
                android:textColor="@color/textColor"
                android:textSize="@dimen/font_size_28px" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="什么昵称好"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/font_size_26px"

                />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_attention"
                android:layout_width="@dimen/space_130"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_setup_button"
                android:gravity="center"
                android:paddingTop="@dimen/space_6"
                android:paddingBottom="@dimen/space_6"
                android:drawableLeft="@mipmap/icon_add_follow"
                android:text="关注"
                android:textColor="@android:color/white" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <include layout="@layout/division_line" />
</com.zhy.autolayout.AutoLinearLayout>